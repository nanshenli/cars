<script src="/js/jquery-1.12.3.min.js"></script>
<script src="/js/bootstrap.js"></script>
<script src="/js/underscore.js"></script>
<script src="/js/PageNav.js"></script>
<script>
    $('#Addbtn').click(function () {
        var str=$('#addCarCategory').serialize();
        console.log(str)
        $.post("/addCar",str,function(data){
            if(data.result == 1){
                alert("添加成功！");
                $("input[type=text]").val("");
                // window.location="/staff";
                window.location.reload();
            }else if(data.result == -1){
                alert("提交失败，id被占用！");
            }else if(data.result == -2){
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    })

    //删除
    $("#removebtn").click(function () {
        var radi=$("input[name=radio]:checked").val();
        if(radi==null){
            alert("什么也没选中!");
            return false;
        }else{
            var sid=$("input[name=radio]:checked").attr("data-id");
            $.ajax({
                url : "/removeCar/" + sid,
                type : "delete",
                success : function(data){
                    if(data.result == 1){
                        alert("删除成功");
                        $(this).parents("tr").remove();
                        window.location.reload();
                        // window.location="/staff";
                    }else{
                        alert("服务器错误！");
                    }
                }
            });}
    })

    //更改页面
    $("#updata").click(function () {
        // alert(kk)
        var radi=$("input[name=radio]:checked").val();
        if(radi==null){
            alert("什么也没选中!");
            return false;
        }else{
            var sid=$("input[name=radio]:checked").attr("data-id");
            $.ajax({
                url : "/updataCar/" + sid,
                type : "get",
                success : function(data){
                    // console.log(data.updata);
                    //     var dt=data.results
                    if(data.result == -1){
                        alert("服务器错误");
                    }else{
                        $('<form id="updatecar"></form>').html('<p><span>行号：</span><input class="form-control" type="text" name="sid" value="'+data.updata[0].sid+'" disabled></p><p><span>类别名称：</span><input class="form-control category" type="text" name="category" value="'+data.updata[0].category+'"></p>').appendTo($("#bjyg"));
                    }
                }
            });}
    })

    //点击确认更改
    $('#bcgg').click(function () {
        var str=$('#updatecar').serialize();
        console.log(str);
        var sid=$("input[name=radio]:checked").attr("data-id");
        $.post("/toupdataCar/" + sid,str,function(data){
            if(data.result == 1){
                alert("修改成功！");
                window.location.reload();
                // window.location = "/";
            }else{
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    })
    //close
    $('#togb').click(function () {
        $("#bjyg").html('');
    })

    $.get("/allCar?page=1",function(data){
        //分页条
        new PageNav({
            boxid : "pagenavbox",
            page : 1,
            pageAmount : data.pageAmount,
            change : function(pagenumber){
                gotopage(pagenumber);
            }
        });

        gotopage(1);
    });
    function gotopage(pagenumber){
        //清空
        $("#tbody").empty();

        //获得新的数据
        $.get("/allCar?page=" + pagenumber,function(data){
            $.each(data.results,function(i, n){
                $tr = $("<tr></tr>");
                $("<td></td>").html('<input type="radio" name="radio" data-id="'+n._id+'"></td>').appendTo($tr);
                $("<td></td>").html(n.sid).appendTo($tr);
                $("<td></td>").html(n.category).appendTo($tr);
                $tr.appendTo($("#tbody"));
            });
        });
    }
</script>
</body>
