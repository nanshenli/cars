<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
</head>
<style>
    #pagenavbox a{
        display: inline-block;
        padding:5px 10px;
    }
    #pagenavbox a.cur{
        background: orange;
    }
</style>
<body>
<div class="container">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">租车系统</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/client">客人查询</a></li>
                    <li><a href="/lease">租赁登记</a></li>
                    <li><a href="/return">归还登记</a></li>
                    <li><a href="/statistical">统计分析</a></li>
                    <li><a href="/class">类别档案</a></li>
                    <li class="active"><a href="/car">汽车档案</a></li>
                    <li><a href="/">退出系统</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right" >
                    <li class="active"><a href="#">管理员：<%= uname %></a></li>
                </ul>
            </div>
        </div>
    </nav>


    <div style="padding-bottom:5px;margin-top: 60px">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal1" data-whatever="@mdo">增加汽车</button>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal2" data-whatever="@fat" id="update">修改信息</button>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal3" data-whatever="@getbootstrap">删除</button>
        <!--<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal4" data-whatever="@getbootstrap">返回</button>-->
    </div>

    <!--增加新客户-->
    <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="exampleModalLabel">新增汽车信息</h4>
                </div>
                <div class="modal-body">
                    <form id="addCarInfo">
                        <div class="row">
                            <p class="col-lg-3">
                                <span>行号</span>
                            </p>
                            <p class="col-lg-8">
                                <input type="text" name="sid" class="form-control sid">
                            </p>
                        </div>
                        <div class="row">
                            <p class="col-lg-3">
                                <span>汽车名称：</span>
                            </p>
                            <p class="col-lg-8">
                                <input type="text" name="name"  class="form-control name">
                            </p>
                        </div>
                        <div class="row">
                            <p class="col-lg-3">
                                <span>所属类型：</span>
                            </p>
                            <p class="col-lg-8">
                                <!--<input type="text" class="form-control category">-->
                                <select name="category" class="form-control category" >

                                </select>
                            </p>
                        </div>
                        <div class="row">
                            <p class="col-lg-3">
                                <span>租赁价格：</span>

                            </p>
                            <p class="col-lg-8">
                                <input type="text" name="price" class="form-control price" >
                            </p>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"  id="Addbtn">确认</button>
                    <button type="button" class="btn btn-primary">取消</button>
                </div>
            </div>
        </div>
    </div>
    <!--修改信息-->
    <div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="exampleModalLabel">修改汽车信息</h4>
                </div>
                <div class="modal-body">
                    <div style="width: 70%;" id="bjyg"></div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="bcgg">确认</button>
                    <button type="button" class="btn btn-primary">取消</button>
                </div>
            </div>
        </div>
    </div>
    <!--删除用户-->
    <div class="modal fade" id="exampleModal3" tabindex="-1" role="dialog" aria-labelledby="exampleModal3">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                <div class="modal-body">
                    是否删除
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">NO</button>
                    <button type="button" class="btn btn-primary" id="removebtn">YES</button>
                </div>
            </div>
        </div>
    </div>
    <!--返回-->

    <!--客户信息表-->
    <div class="panel panel-default">
        <div class="panel-heading">汽车档案</div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th></th>
                <th>行号</th>
                <th>汽车名称</th>
                <th>所属类型</th>
                <th>租赁价格</th>
                <th>计量单位</th>
            </tr>
            </thead>
            <tbody id="tbody"></tbody>
        </table>
        <div id="pagenavbox"></div>
    </div>
</div>

</div>
<script src="/js/jquery-1.12.3.min.js"></script>
<script src="/js/bootstrap.js"></script>
<script src="/js/underscore.js"></script>
<script src="/js/PageNav.js"></script>
<script>
    $.get("/getAllCarName",function(d){
        for(var i=0;i<d.results.length;i++){
            var opt=$("<option>"+d.results[i].category+"</option>");
            $(".category").append(opt);
        }
    })
    $('#Addbtn').click(function () {
        $.post("/addCarInfo",{
            sid : $(".sid").val(),
            name : $(".name").val(),
            category : $(".category").val(),
            price : $(".price").val(),
            state : 0,
            rentcount : 0
        },function(data){
            if(data.result == 1){
                alert("添加成功！");
                $("input[type=text]").val("");
                // window.location="/staff";
                window.location.reload();
            }else if(data.result == -1){
                alert("提交失败，id被占用！");
            }else if(data.result == -2){
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    })
    // $('#Addbtn').click(function () {
    //     var str=$('#addCarInfo').serialize();
    //     console.log(str)
    //     $.post("/addCarInfo",str,function(data){
    //         if(data.result == 1){
    //             alert("添加成功！");
    //             $("input[type=text]").val("");
    //             // window.location="/staff";
    //             window.location.reload();
    //         }else if(data.result == -1){
    //             alert("提交失败，id被占用！");
    //         }else if(data.result == -2){
    //             alert("服务器错误！请联系管理员，怎么联系我也不知道！");
    //         }
    //     })
    // })

    //删除
    $("#removebtn").click(function () {
        var radi=$("input[name=radio]:checked").val();
        if(radi==null){
            alert("什么也没选中!");
            return false;
        }else{
            var sid=$("input[name=radio]:checked").attr("data-id");
            $.ajax({
                url : "/removeCarInfo/" + sid,
                type : "delete",
                success : function(data){
                    if(data.result == 1){
                        alert("删除成功");
                        $(this).parents("tr").remove();
                        window.location.reload();
                        // window.location="/staff";
                    }else{
                        alert("服务器错误！");
                    }
                }
            });}
    })

    //更改页面
    $("#update").click(function () {
        // alert(kk)
        var radi=$("input[name=radio]:checked").val();
        if(radi==null){
            alert("什么也没选中!");
            return false;
        }else{
            var sid=$("input[name=radio]:checked").attr("data-id");
            $.ajax({
                url : "/updataCarInfo/" + sid,
                type : "get",
                success : function(data){
                    // console.log(data.updata);
                    //     var dt=data.results
                    if(data.result == -1){
                        alert("服务器错误");
                    }else{
                        $('<form id="updatecar"></form>').html('<p><span>行号：</span><input class="form-control" type="text" name="sid" value="'+data.updata[0].sid+'" disabled></p><p><span>汽车名称：</span><input class="form-control" type="text" name="name" value="'+data.updata[0].name+'"></p><p><span>所属类型：</span><input class="form-control" type="text" name="category" value="'+data.updata[0].category+'"></p><p><span>租赁价格：</span><input class="form-control" type="text" name="price" value="'+data.updata[0].price+'"></p>').appendTo($("#bjyg"));
                    }
                }
            });}
    })

    // <select name="category" class="form-control category"><option value="'+data.updata[0].category+'"></option>

    //点击确认更改
    $('#bcgg').click(function () {
        var str=$('#updatecar').serialize();
        // console.log(str);
        // console.log(typeof str);
        var sid=$("input[name=radio]:checked").attr("data-id");
        $.post("/toupdataCarInfo/" + sid,str,function(data){
            if(data.result == 1){
                alert("修改成功！");
                window.location.reload();
                // window.location = "/";
            }else{
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    })
    //close
    $('#togb').click(function () {
        $("#bjyg").html('');
    })

    $.get("/allCarInfo?page=1",function(data){
        //分页条
        new PageNav({
            boxid : "pagenavbox",
            page : 1,
            pageAmount : data.pageAmount,
            change : function(pagenumber){
                gotopage(pagenumber);
            }
        });

        gotopage(1);
    });
    function gotopage(pagenumber){
        //清空
        $("#tbody").empty();

        //获得新的数据
        $.get("/allCarInfo?page=" + pagenumber,function(data){
            $.each(data.results,function(i, n){
                $tr = $("<tr></tr>");
                $("<td></td>").html('<input type="radio" name="radio" data-id="'+n._id+'"></td>').appendTo($tr);
                $("<td></td>").html(n.sid).appendTo($tr);
                $("<td></td>").html(n.name).appendTo($tr);
                $("<td></td>").html(n.category).appendTo($tr);
                $("<td></td>").html(n.price).appendTo($tr);
                $("<td></td>").html("天").appendTo($tr);
                $tr.appendTo($("#tbody"));
            });
        });
    }
</script>
</body>
</html>